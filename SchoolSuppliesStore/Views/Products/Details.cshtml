@model SchoolSuppliesStore.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <h4 class="text-danger">@Model.Price.ToString("C")</h4>
            <p class="text-muted">Danh mục: @Model.Category</p>
            <p>@Model.Description</p>
            
            <div class="mt-4">
                <div class="input-group mb-3" style="max-width: 200px;">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary" type="button">-</button>
                    </div>
                    <input type="text" class="form-control text-center" value="1">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">+</button>
                    </div>
                </div>
                <button class="btn btn-primary btn-lg">Thêm vào giỏ hàng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Quantity adjustment buttons
        $('.btn-outline-secondary').click(function() {
            var input = $(this).parent().siblings('input');
            var value = parseInt(input.val());
            
            if ($(this).text() === '+' && value < 10) {
                input.val(value + 1);
            } else if ($(this).text() === '-' && value > 1) {
                input.val(value - 1);
            }
        });
    </script>
}
